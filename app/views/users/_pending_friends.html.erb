<% @user.pending_friendships.each do |requester| %>
  <div class='friends__individual row'>
    <div class='col-xs-6 col-sm-4'>
      <%= requester.name %>
    </div>
    <div class='col-xs-6 col-sm-4'>
      <%= link_to 'Accept request', friendship_path(friend_id: @user, id: requester), id: 'Accept', class:'btn btn-success', method: :patch %>
    </div>
    <div class='col-xs-6 col-sm-4'>
      <%= link_to 'Decline request', friendship_path(friend_id: @user, id: requester), id: 'Decline', class:'btn btn-danger' %>
    </div>
  </div>
<% end %>