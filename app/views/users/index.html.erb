<h1>User List</h1>

<% @users.each do |user| %>
  <p>
    <strong>
      <%= link_to "#{user.name}", user_path(user) %></strong>
    <% if current_user.friends.include?(user)%>
      <%= "Already friended" %>
    <% else %>
      <%= link_to "Request Friend", friendships_path(friend_id: user), method: :post %>
    <% end %>
  </p>
<% end %>