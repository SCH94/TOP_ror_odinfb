<div class='row content-box'>
  <div class='col-xs-12'>
    <h1>
      <% if current_user == @user %>
        Your Profile
      <% else %>
        <%= @user.name %>'s Profile
      <% end %>
    </h1>
    <h4>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h4>
  </div>

  <% if current_user == @user %>
    <div id='friends-active'>
      <div class='col-xs-12'>
        <h2>Friends</h2>
        <%= render 'active_friends' %> 
      </div>
    </div>

    <div id='friends-pending'>
      <div class='col-xs-12'>
        <h2>Pending</h2>
        <%= render 'pending_friends' %>
      </div>
    </div>
  <% end %>
</div>

<div class="row content-box">
  <div id='profile-posts'>
    <div class='col-xs-12'>
      <h2>Posts</h2>
    </div>
    <div class='col-xs-12'>
      <% if current_user == @user %>
        <%= link_to 'Create a post', new_post_path, class: 'btn btn-primary form-control' %>
      <% end %>
    </div>
    <div class='col-xs-12'>
      <%= render @user.posts %>
    </div>  
  </div>


