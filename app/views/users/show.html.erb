<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h1>Your Profile</h1>
    <h4><%= @user.name %></h4>
  </div>
</div>

<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h2>Friends</h2>
    <% @friendships.each do |friendship| %>
      <li>
        <%= find_user(friendship.return_friend_id(@user.id)).name %>
        <%= link_to "Remove friend", friendship_path(friendship), method: :delete %>
      </li>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h2>Pending</h2>
    <% @pending_friendships.each do |request| %>
      <li>
        <%= find_user(request.user_id).name %>
        <%= link_to "Accept", friendship_path(request), method: "put" %>
      </li>
    <% end %>
  </div>
</div>

<div id="profile-posts" class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h2>Posts</h2>
  </div>
  <div class='col-xs-6 col-xs-offset-3'>
    <% if current_user == @user %>
      <%= link_to 'Create post', new_post_path, class: 'btn btn-primary form-control' %>
    <% end %>
  </div>
  <div class='col-xs-12'>
    <%= render partial: 'posts/feed' %>
  </div>  
</div>