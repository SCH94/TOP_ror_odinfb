<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <h1>Welcome!</h1>
    <h4>Please sign in to continue</h4>
  </div>
</div>

<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <% f.label :email %><br />
        <%= f.email_field :email, 
          id: 'Email', 
          autofocus: true,
          class: 'form-control', 
          placeholder: 'Your email' %>
  
        <% f.label :password %><br />
        <%= f.password_field :password, 
          id: 'Password', 
          autocomplete: "off", 
          class: 'form-control', 
          placeholder: 'Your password' %>
        
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end -%>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    
      <div class='row'>
        <div class='col-xs-8 col-xs-offset-2'>
          <div class="actions">
            <%= f.submit "Log in", id: 'Log in', class: 'btn btn-primary form-control' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class='row'>
  <div id='sign-up-social' class='col-xs-12'>
    <span> -- OR --</span>
  </div>
  <div id='sign-up-social' class='col-xs-12'>
    <% if devise_mapping.omniauthable? %>
      <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
        <i class="fa fa-facebook-official fa-2x" aria-hidden="true"></i>
      <% end %>
      <%= link_to omniauth_authorize_path(resource_name, :google_oauth2) do %>
        <i class="fa fa-google-plus-official fa-2x" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div id='sign-up' class='row'>
  <div class='col-xs-12'>
    <div id='sign-up-link'>
      <span>
        First time user?
      </span>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-info' %>
      <% end -%>
    </div>
  </div>
</div>