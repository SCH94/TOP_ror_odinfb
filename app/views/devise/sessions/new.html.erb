<div class='row'>
  <div id='signin-box' class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3'>
    <h1>Welcome!</h1>
    <h4>Please sign in to continue</h4>

    <%= render 'form' %>
    <%= render 'devise/shared/omniauth_links' %>
  </div>
</div>

<div class='row'>
  <div id='signup-box' class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3'>
    <div class='row'>
      <div class='col-xs-6 signup-box__text'>
        <span>First time user?</span>
      </div>
      <div class='col-xs-6'>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-info btn-block signup-box__button' %>
        <% end -%>
      </div>
    </div>
  </div>
</div>