<div class='row content-box'>
  <div class='col-xs-12'>
    <h4>Forgot your password?</h4>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <% f.label :email %><br />
        <%= f.email_field :email, 
        id: 'Email',
        autofocus: true,
        class: 'form-control',
        placeholder: 'Your email' %>
      </div>

      <div class="actions">
        <%= f.submit "Send reset password instructions", class: 'btn btn-primary form-control' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<%= render 'devise/shared/sign-up' %>